  #   output_dir: 'logs',
  #   verbose: true,
  #   timeout: 300,
  #   include_all_device_logs: true,
  #   include_booted_device_data_directory: true,
  #   print_command: false,
  #   print_command_output: false,
  #   device_naming_style: 'scan'
  # )
  # UI.message("Archive path: #{archive_path}")
end
