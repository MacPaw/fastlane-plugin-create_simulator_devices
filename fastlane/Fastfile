# frozen_string_literal: true

require 'fastlane'

lane :test do
  devices = ['iPhone 16e', 'Apple Watch Series 11 (46mm) (11.5)']
  devices_list = create_simulator_devices(
    devices: devices,
    cache_dir: "#{Dir.home}/.cache/create_simulator_devices",
    remove_cached_runtimes: false,
    delete_unused_runtimes: true,
    verbose: false
  )
  UI.message("Devices list: #{devices_list}")

  devices_list = create_simulator_devices(
    devices: devices.first,
    cache_dir: "#{Dir.home}/.cache/create_simulator_devices",
    remove_cached_runtimes: false,
    delete_unused_runtimes: true,
    verbose: true,
    print_command: true,
    print_command_output: true
  )
  UI.message("Devices list: #{devices_list}")

  # archive_path = gather_simctl_diagnose(
